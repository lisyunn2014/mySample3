<?xml version="1.0" encoding="UTF-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent" android:layout_height="?android:attr/listPreferredItemHeight"  
    android:padding="6dip" android:baselineAligned="false" android:background="@color/adcrops_background_color"
    android:id="@+id/adcrops_list_view">  
    <ImageView android:layout_marginRight="6dip"  
        android:src="@drawable/adcrops_blank_icon" android:layout_height="64dip" android:layout_width="64dip" android:id="@+id/adcrops_list_view_appIcon"/>  
    <LinearLayout android:layout_width="0dip" android:layout_height="fill_parent" android:layout_weight="1.20" android:orientation="vertical">  
        <TextView android:layout_height="0dip" android:textColor="@color/adcrops_text_color" android:layout_weight="0.91" android:gravity="center_vertical|top" android:layout_width="fill_parent" android:textStyle="bold|italic" android:scrollHorizontally="true" android:ellipsize="end" android:id="@+id/adcrops_list_view_appName"/>
        <TextView android:layout_height="0dip" android:textColor="@color/adcrops_text_color" android:layout_weight="0.91" android:gravity="center_vertical|top" android:layout_width="fill_parent" android:ellipsize="end" android:scrollHorizontally="true" android:id="@+id/adcrops_list_view_description"/>
        <LinearLayout android:layout_width="fill_parent" android:gravity="left" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="right" android:src="@drawable/adcrops_money" android:layout_height="25dp" android:layout_width="wrap_content" android:id="@+id/adcrops_list_view_price_icon"></ImageView>
            <TextView android:layout_height="fill_parent" android:textColor="@color/adcrops_text_color" android:text="@string/adcrops_list_view_price_text_view" android:layout_marginTop="3dip" android:id="@+id/adcrops_list_view_price" android:layout_width="66dp"></TextView>
            <ImageView android:src="@drawable/adcrops_arrow_up" android:layout_width="wrap_content" android:id="@+id/adcrops_list_view_arrow_up" android:layout_height="wrap_content" android:visibility="invisible" android:layout_marginTop="8dip"></ImageView>
            <ImageView android:src="@drawable/adcrops_arrow_down" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/adcrops_list_view_arrow_down" android:visibility="invisible" android:layout_marginTop="8dip"></ImageView>
            <LinearLayout android:weightSum="1" android:layout_width="fill_parent" android:gravity="right|top" android:layout_height="fill_parent">
            	<Button android:id="@+id/adcrops_list_view_install_button" android:focusable="false" android:layout_gravity="right|center_horizontal" android:layout_weight="0.37" android:layout_marginBottom="2dip" android:background="@drawable/adcrops_install_button" android:gravity="center" android:typeface="sans" android:textSize="9dip" android:text="@string/adcrops_list_view_install_button" android:layout_height="25dip" android:layout_width="100dip" android:textColor="@color/adcrops_button_text_color"></Button>
            </LinearLayout>
        </LinearLayout>  
    </LinearLayout>  
</LinearLayout>  